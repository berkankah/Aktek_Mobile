<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aktekbilisim.aktekmobile.MasrafGiris"
    android:background="@drawable/aktek_background_mg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtMasraf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtMasraf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Masraf Kodu"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/txtMasraf"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="8"
        android:inputType="textCapCharacters"
        android:labelFor="@+id/dateText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView10" />
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Masraf Tarihi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dateText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtMasraf"
        android:layout_alignLeft="@+id/txtMasraf"
        android:layout_alignRight="@+id/txtMasraf"
        android:layout_alignStart="@+id/txtMasraf"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txtMasraf"/>
    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtBelgeNo"
        android:layout_alignParentLeft="true"
        android:text="                                  :"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtBelgeNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Belge No"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtBelgeNo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dateText"
        android:layout_alignLeft="@+id/dateText"
        android:layout_alignRight="@+id/dateText"
        android:layout_alignStart="@+id/dateText"
        android:layout_below="@+id/dateText"
        android:layout_marginTop="5dp"
        android:inputType="textCapCharacters"/>
    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtFirmaAdi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtFirmaAdi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Firma Adı"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtFirmaAdi"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtBelgeNo"
        android:layout_alignLeft="@+id/txtBelgeNo"
        android:layout_alignRight="@+id/txtBelgeNo"
        android:layout_alignStart="@+id/txtBelgeNo"
        android:layout_below="@+id/txtBelgeNo"
        android:layout_marginTop="5dp"
        android:inputType="textCapCharacters"/>
    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTutar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTutar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Tutar(TL)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtTutar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtFirmaAdi"
        android:layout_alignLeft="@+id/txtFirmaAdi"
        android:layout_alignRight="@+id/txtFirmaAdi"
        android:layout_alignStart="@+id/txtFirmaAdi"
        android:layout_below="@+id/txtFirmaAdi"
        android:layout_marginTop="5dp"
        android:inputType="number|numberDecimal" />
    <TextView
        android:id="@+id/textView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtSirketAdi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtSirketAdi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Şirket Adı"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/txtSirketAdi"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters"
        android:layout_below="@+id/txtTutar"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textView60" />
    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtAciklama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtAciklama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Açıklama"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtAciklama"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtSirketAdi"
        android:layout_alignLeft="@+id/txtSirketAdi"
        android:layout_alignRight="@+id/txtSirketAdi"
        android:layout_alignStart="@+id/txtSirketAdi"
        android:layout_below="@+id/txtSirketAdi"
        android:layout_marginTop="5dp"
        android:inputType="textCapCharacters" />

    <Button
        android:id="@+id/yeniEkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        android:text="Masrafı Ekle"
        android:layout_alignEnd="@+id/btnMasrafList"
        android:background="@drawable/aktek_button"/>


    <Button
        android:id="@+id/btnMasrafList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="Masraf Listesini Gör"
        android:background="@drawable/aktek_button" />

</RelativeLayout>
