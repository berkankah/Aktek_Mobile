<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aktekbilisim.aktekmobile.MasrafDonemGiris"
    android:background="@drawable/aktek_background_mg">

    <TextView android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/dateTextDonem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masraf Dönemi"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/dateTextDonem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/dateTextDonem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:ems="8"
        android:inputType="date"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <requestFocus />
    </EditText>
    <TextView android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                                  :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/txtDonemAciklama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dönem Açıklama"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/txtDonemAciklama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDonemAciklama"
        android:layout_alignEnd="@+id/dateTextDonem"
        android:layout_alignLeft="@+id/dateTextDonem"
        android:layout_alignRight="@+id/dateTextDonem"
        android:layout_alignStart="@+id/dateTextDonem"
        android:layout_below="@+id/dateTextDonem"
        android:inputType="textCapCharacters"/>
    <Button
        android:layout_width="650dp"
        android:layout_height="50dp"
        android:text="Dönem Kaydet"
        android:id="@+id/btnDonem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtDonemAciklama"
        android:background="@drawable/aktek_button"/>

</RelativeLayout>
